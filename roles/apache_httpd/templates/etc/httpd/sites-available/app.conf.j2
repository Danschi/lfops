# {{ ansible_managed }}
# 2022083001
# Application Server vHost
{% if item['value']['by_role'] | d() %}
# Generated by Ansible role: {{ item['value']['by_role'] }}
{% endif %}

# {{ item['value']['comment'] | d('no description available') }}
<VirtualHost {{ item['value']['virtualhost_ip'] | d('*') }}:{{ item['value']['virtualhost_port'] | d(443) }}>
    ServerName {{ item['value']['conf_server_name'] }}
{% if item['value']['conf_server_alias'] is defined and item['value']['conf_server_alias'] | length %}
    ServerAlias {{ item['value']['conf_server_alias'] }}
{% endif %}
    ServerAdmin {{ item['value']['conf_server_admin'] | d(apache_httpd__conf_server_admin) }}

    ErrorLog "{{ item['value']['conf_error_log'] | d('logs/' ~ item['value']['conf_server_name'] ~ '-error.log')}}"
    LogLevel {{ item['value']['conf_log_level'] | d('notice core:info') }}
{% if item['value']['conf_custom_log'] is defined and item['value']['conf_custom_log'] %}
    # log_config_module
    CustomLog {{ item['value']['conf_custom_log'] }}
{% endif %}

    KeepAliveTimeout {{ item['value']['conf_keep_alive_timeout'] | d(5) }}
    Timeout {{ item['value']['conf_timeout'] | d(apache_httpd__conf_timeout) }}

    DocumentRoot "{{ item['value']['conf_document_root'] | d(apache_httpd__conf_document_root ~ '/' ~ item['value']['conf_server_name']) }}"
    <Directory {{ item['value']['conf_document_root'] | d(apache_httpd__conf_document_root ~ '/' ~ item['value']['conf_server_name']) }}>
        AllowOverride {{ item['value']['conf_allow_override'] | d('None') }}
        Options {{ item['value']['conf_options'] | d('None') }}
        {{ item['value']['authz_document_root'] | d('Require local') }}
    </Directory>

    <FilesMatch "\..*$">
        Require all denied
    </FilesMatch>

    <FilesMatch ".+\.({{ item['value']['allowed_file_extensions'] | d(['css', 'gif', 'html?', 'ico', 'jpe?g', 'js', 'pdf', 'php', 'png', 'svg', 'ttf', 'txt', 'woff2?']) | join('|') }})$">
        {{ item['value']['authz_file_extensions'] | d('Require local') }}
    </FilesMatch>

    # dir_module
    DirectoryIndex {{ item['value']['conf_directory_index'] | d(apache_httpd__mod_dir_directory_index) }}

{% if not apache_httpd__skip_php_fpm %}
    # PHP-FPM: redirect to site-specific php-fpm pool if mod_php is not available
    # Enable http authorization headers
    SetEnvIfNoCase ^Authorization$ "(.+)" HTTP_AUTHORIZATION=$1
    <FilesMatch \.(php|phar)$>
        {{ item['value']['php_set_handler'] | d('SetHandler "proxy:unix:/run/php-fpm/www.sock|fcgi://localhost"') }}
    </FilesMatch>
    # Specific PHP configuration options like "session.save_handler" have to be set
    # in /etc/php-fpm.d/{{ item['value']['conf_server_name'] }}.conf, for example
{% endif %}

    # reqtimeout_module
    # set timeout values for receiving the request headers and/or body from client
    RequestReadTimeout {{ item['value']['conf_request_read_timeout'] | d('header=20-40,MinRate=500 body=20,MinRate=500') }}

    # rewrite_module
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} !^({{ item['value']['allowed_http_methods'] | d(['GET', 'OPTIONS']) | join('|') }})
    RewriteRule .* - [redirect=405,last]

    # disable old HTTP protocol versions
    # just allow those ones listed below
    RewriteCond %{THE_REQUEST} !HTTP/1\.1$
    RewriteCond %{THE_REQUEST} !HTTP/2
    RewriteCond %{THE_REQUEST} !HTTP/3
    RewriteRule .* - [forbidden]

    # requests without a hostname are disallowed
    RewriteCond %{HTTP_HOST} !^{{ item['value']['conf_server_name'] | replace('.', '\.') }} [nocase]
    RewriteCond %{REQUEST_URI} !^/error [nocase]
    RewriteRule ^.(.*) - [last,forbidden]

{% if item['value']['raw'] | d() %}
# raw content
{{ item['value']['raw'] }}
{% endif %}
</VirtualHost>
