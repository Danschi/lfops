#
# This file controls the configuration of the audit daemon
#

local_events = yes
write_logs = yes
log_file = /var/log/audit/audit.log
log_group = root
log_format = ENRICHED
flush = INCREMENTAL_ASYNC
freq = 50
max_log_file = 8
num_logs =  {{ audit__num_logs | d(5) }}
priority_boost = 4
name_format = NONE
##name = mydomain
max_log_file_action = ROTATE
space_left = {{ audit__space_left | d(75) }}
space_left_action = {{ audit__space_left_action | d('SYSLOG') }}
verify_email = yes
action_mail_acct = {{ audit__action_mail_account | d('root') }}
admin_space_left = {{ audit__admin_space_left | d(50) }}
admin_space_left_action = {{ admin_space_left_action | d('SUSPEND') }}
disk_full_action = SUSPEND
disk_error_action = SUSPEND
use_libwrap = yes
##tcp_listen_port = 60
tcp_listen_queue = 5
tcp_max_per_addr = 1
##tcp_client_ports = 1024-65535
tcp_client_max_idle = 0
transport = TCP
krb5_principal = auditd
##krb5_key_file = /etc/audit/audit.key
distribute_network = no
q_depth = 1200
overflow_action = SYSLOG
max_restarts = 10
plugin_dir = /etc/audit/plugins.d
end_of_event_timeout = 2
