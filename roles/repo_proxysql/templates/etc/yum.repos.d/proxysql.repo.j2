[proxysql-{{ repo_proxysql__version__combined_var }}]
name=ProxySQL {{ repo_proxysql__version__combined_var }}
{% if repo_proxysql__mirror_url is defined and repo_proxysql__mirror_url | length %}
baseurl={{ repo_proxysql__mirror_url }}/proxysql/releases/bundle/proxysql/{{ repo_proxysql__version__combined_var }}/yum
{% else %}
baseurl=https://repo.proxysql.com/ProxySQL/proxysql-{{ repo_proxysql__version__combined_var }}.x/centos/$releasever
{% endif %}
enabled=1
gpgcheck=1
# gpgkey=https://repo.proxysql.com/ProxySQL/proxysql-{{ repo_proxysql__version__combined_var }}.x/repo_pub_key
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-proxysql
autorefresh=1
{% if repo_proxysql__basic_auth_login is defined and repo_proxysql__basic_auth_login | length %}
username={{ repo_proxysql__basic_auth_login["username"] }}
password={{ repo_proxysql__basic_auth_login["password"] }}
{% endif %}
